<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#231F20"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Real or Fake?"
            android:textColor="#7EBDC2"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320sp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/left100"
                android:layout_width="190sp"
                android:layout_height="10sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                 />
            <ImageView
                android:id="@+id/right100"
                android:layout_width="190sp"
                android:layout_height="10sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330sp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/left80"
                android:layout_width="190sp"
                android:layout_height="20sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                />
            <ImageView
                android:id="@+id/right80"
                android:layout_width="190sp"
                android:layout_height="20sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350sp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/left60"
                android:layout_width="190sp"
                android:layout_height="20sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                />

            <ImageView
                android:id="@+id/right60"
                android:layout_width="190sp"
                android:layout_height="20sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370sp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/left40"
                android:layout_width="190sp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                />
            <ImageView
                android:id="@+id/right40"
                android:layout_width="190sp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="395sp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/left20"
                android:layout_width="190sp"
                android:layout_height="15sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                />

            <ImageView
                android:id="@+id/right20"
                android:layout_width="190sp"
                android:layout_height="15sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="410sp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/left0"
                android:layout_width="190sp"
                android:layout_height="15sp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                />

            <ImageView
                android:id="@+id/right0"
                android:layout_width="190sp"
                android:layout_height="15sp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_root"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/movable"
                android:layout_width="150sp"
                android:layout_height="90sp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/controlere" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hold and Drag"
                android:textColor="#7EBDC2"
                android:textSize="30sp" />

        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>